{
  "name": "EngslishApp",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "22.18.10",
    "@types/nodemailer": "7.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.2",
    "typescript-eslint": "8.46.3"
  },
  "dependencies": {
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "concurrently": "9.2.1",
    "crypto-js": "4.2.0",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-rate-limit": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "nodemailer": "7.0.10",
    "nodemon": "3.1.10",
    "pg": "8.16.3",
    "pg-query-stream": "4.10.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.1",
    "typeorm": "0.3.27"
  },
  "scripts": {

    "//": "Chạy server ở chế độ dev, chạy trực tiếp TS không cần build, chạy file src/index.ts",
    "start:dev": "nodemon --exec ts-node src/index.ts",

    "//": "Chạy server ở chế độ production, chạy file build/index.js đã được build từ TS sang JS",
    "start:prod": "cross-env NODE_ENV=production node build/index.js",

    "//": "rimraf build: xoá sạch thư mục build cũ",
    "//": "tsc: chạy TypeScript Compiler để chuyển src/**/*.ts → build/**/*.js",
    "build": "rimraf build && tsc",

    "//": "npm run build: build lại code TypeScript. Sau đó chạy file node build/index.js",
    "//": "Tức là: Build code, rồi chạy app bằng bản đã build.",
    "//": "Railway sẽ tự động build trước (theo railway.json), nên start chỉ cần chạy file đã build",
    "start": "node build/index.js",

    "//": "Chạy các lệnh TypeORM với ts-node và CommonJS",
    "typeorm": "typeorm-ts-node-commonjs",
    "//": "Chạy migrations trong production (sau khi build)",
    "migration:run": "NODE_ENV=production npx typeorm-ts-node-commonjs migration:run -d build/data-source.js",
    "//": "Chạy migrations trong development",
    "migration:run:dev": "npx typeorm-ts-node-commonjs migration:run -d src/data-source.ts",

    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix"
  }
}
